<?xml version="1.0"?>
<robot name="xl430_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ========================= -->
  <!--          WORLD           -->
  <!-- ========================= -->
  <link name="world"/>

  <joint name="world_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ========================= -->
  <!--        MATERIALS         -->
  <!-- ========================= -->
  <material name="gray">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>

  <!-- ========================= -->
  <!--        BASE LINK          -->
  <!-- ========================= -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- ========================= -->
  <!--        LINK 1             -->
  <!-- ========================= -->
  <link name="link_1">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
      <material name="gray"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0.075"/>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.05"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="2.0" velocity="2.0"/>
  </joint>

  <!-- ========================= -->
  <!--        LINK 2             -->
  <!-- ========================= -->
  <link name="link_2">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
      <material name="gray"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0.075"/>
      <mass value="0.25"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.15"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="2.0" velocity="2.0"/>
  </joint>

  <!-- ========================= -->
  <!--        LINK 3             -->
  <!-- ========================= -->
  <link name="link_3">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
      <material name="gray"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.12" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
    </collision>

    <inertial>
      <origin xyz="0 0 0.06"/>
      <mass value="0.2"/>
      <inertia ixx="0.0008" ixy="0" ixz="0"
               iyy="0.0008" iyz="0"
               izz="0.0008"/>
    </inertial>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.15"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="2.0" velocity="2.0"/>
  </joint>

  <!-- ================================================= -->
  <!--                ROS 2 CONTROL                     -->
  <!-- ================================================= -->
  <ros2_control name="DynamixelSystem" type="system">

    <hardware>
      <plugin>dynamixel_hardware_interface/DynamixelHardware</plugin>
      <param name="port_name">/dev/ttyACM0</param>
      <param name="baud_rate">1000000</param>
      <param name="number_of_joints">3</param>
      <param name="number_of_transmissions">3</param>
      <param name="disable_torque_at_init">true</param>
      <!-- Path relative to package share -->
      <param name="dynamixel_model_folder">/param/dxl_model</param>

    </hardware>

    <!-- Joint interfaces -->
    <joint name="joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="joint_2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="joint_3">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Transmissions -->
    <transmission name="trans_1">
      <plugin>transmission_interface/SimpleTransmission</plugin>
      <joint name="joint_1" role="joint"/>
      <actuator name="dxl1" role="actuator">
        <command_interface name="position"/>
        <mechanical_reduction>1</mechanical_reduction>
      </actuator>
    </transmission>

    <transmission name="trans_2">
      <plugin>transmission_interface/SimpleTransmission</plugin>
      <joint name="joint_2" role="joint"/>
      <actuator name="dxl2" role="actuator">
        <command_interface name="position"/>
        <mechanical_reduction>1</mechanical_reduction>
      </actuator>
    </transmission>

    <transmission name="trans_3">
      <plugin>transmission_interface/SimpleTransmission</plugin>
      <joint name="joint_3" role="joint"/>
      <actuator name="dxl3" role="actuator">
        <command_interface name="position"/>
        <mechanical_reduction>1</mechanical_reduction>
      </actuator>
    </transmission>

    <!-- Dynamixels -->
    <gpio name="dxl1">
      <param name="type">dxl</param>
      <param name="ID">1</param>
      <command_interface name="Goal Position"/>
      <state_interface name="Present Position"/>
      <state_interface name="Present Velocity"/>
    </gpio>

    <gpio name="dxl2">
      <param name="type">dxl</param>
      <param name="ID">2</param>
      <command_interface name="Goal Position"/>
      <state_interface name="Present Position"/>
      <state_interface name="Present Velocity"/>
    </gpio>

    <gpio name="dxl3">
      <param name="type">dxl</param>
      <param name="ID">3</param>
      <command_interface name="Goal Position"/>
      <state_interface name="Present Position"/>
      <state_interface name="Present Velocity"/>
    </gpio>

  </ros2_control>

</robot>
